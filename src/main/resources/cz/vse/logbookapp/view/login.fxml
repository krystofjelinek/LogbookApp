<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cz.vse.logbookapp.controller.LoginController"
      alignment="CENTER"
      spacing="20"
      prefWidth="320"
      prefHeight="240"
      style="-fx-padding: 32; -fx-background-color: #f4f8fb; -fx-border-radius: 14; -fx-background-radius: 14; -fx-effect: dropshadow(gaussian, #b0b8c1, 10, 0.2, 0, 2);">
    <Label text="Login"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2a3a4d;"/>
    <Label text="Enter your email to continue"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a3a4d;"/>
    <TextField fx:id="usernameField"
               promptText="E-mail"
               style="-fx-font-size: 15px; -fx-background-radius: 8; -fx-padding: 8;"/>
    <Button text="Login"
            onAction="#onLogin"
            style="-fx-background-color: #3b7ddd; -fx-text-fill: white; -fx-font-size: 15px; -fx-background-radius: 8; -fx-padding: 8 32;"/>
</VBox>