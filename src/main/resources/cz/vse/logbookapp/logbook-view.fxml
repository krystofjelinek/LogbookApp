<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="cz.vse.logbookapp.controller.PonorController" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #e0e0e0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Přihlášen" style="-fx-font-size: 16;">
                <font>
                    <Font name="Arial" size="16.0" />
                </font>
            </Label>
            <Label text=" Kryštof Jelínek" style="-fx-font-size: 16; -fx-font-weight: bold;">
                <font>
                    <Font name="Arial Bold" size="16.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <left>
        <VBox style="-fx-background-color: #f0f0f0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Button fx:id="add" onAction="#onAddButtonClick" mnemonicParsing="false" prefWidth="100.0" text="+" style="-fx-font-size: 24;">
                <font>
                    <Font name="Arial" size="24.0" />
                </font>
            </Button>
            <VBox spacing="10.0" style="-fx-padding: 20 0 0 0;">
                <Button mnemonicParsing="false" onAction="#onPonoryButtonClick" prefWidth="100.0" text="Ponory" />
                <Button mnemonicParsing="false" onAction="#onLokalityButtonClick" prefWidth="100.0" text="Lokality" />
            </VBox>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f0f0f0;">
                <VBox fx:id="ponorContainer" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" >
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </VBox>
        </ScrollPane>
    </center>
</BorderPane>
